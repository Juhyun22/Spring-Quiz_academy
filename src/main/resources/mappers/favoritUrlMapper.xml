<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.quiz.lesson06.dao.FavoritUrlDAO">
	<insert id="insertFavoritUrl" parameterType="com.quiz.lesson06.model.FavoritUrl">
		INSERT INTO `favorit_url`
		(
			`name`
			, `url`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{name}
			, #{url}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectFavoritUrl" resultType="com.quiz.lesson06.model.FavoritUrl">
		SELECT
			`id`
			, `name`
			, `url`
			, `createdAt`
			, `updatedAt`
		FROM
			`favorit_url`
	</select>
</mapper>